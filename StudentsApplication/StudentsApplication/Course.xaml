<Window x:Class="StudentsApplication.Course"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsApplication"
        mc:Ignorable="d"
        Title="Course" Height="300" Width="300">
    <Grid>
        <Label x:Name="lblSelectCourse" Content="Select a course from the drop down menu below
               " HorizontalAlignment="Left" Margin="13,26,0,0" VerticalAlignment="Top"/>
        <Button Content="Ok to Confirm" HorizontalAlignment="Left" Margin="98,164,0,0" VerticalAlignment="Top" Width="133" Click="Button_Click"/>
        <ComboBox x:Name="comboCourse" HorizontalAlignment="Left" Margin="37,52,0,0" VerticalAlignment="Top" Width="220"/>

    </Grid>
</Window>
